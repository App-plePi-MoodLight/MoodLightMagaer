<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="23sp"
    android:layout_marginStart="23sp"
    android:layout_marginTop="23sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/question_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gray_background"
        android:padding="17sp"
        android:layout_marginBottom="15sp"
        >

        <TextView
            android:id="@+id/question_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="16sp"
            android:textColor="#000000"
            tools:text="2021.10.22"
            android:layout_marginBottom="10sp"
            />

        <TextView
            android:id="@+id/question_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="#000000"
            tools:text="질문제목입니다"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/question_edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_design_1"
            android:text="수정"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#ffffff"
            android:layout_marginEnd="10sp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/question_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_design_1"
            android:text="삭제"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#ffffff"
            />

    </LinearLayout>

</LinearLayout>