<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionCreateActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문 등록하기"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#212121"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/date_etv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="2021-9-21"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_medium"
        android:padding="15sp"
        android:theme="@style/editText"
        android:background="@drawable/gray_background"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="50sp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        />

    <EditText
        android:id="@+id/content_etv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="질문 입력"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_medium"
        android:padding="15sp"
        android:theme="@style/editText"
        android:background="@drawable/gray_background"
        app:layout_constraintTop_toBottomOf="@id/date_etv"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="50sp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/create_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_design_3"
        android:text="저장하기"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginStart="10sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>